<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Cụm từ:"/>
        <EditText
            android:textSize="12dp"
            android:id="@+id/tv_thaythe"
            android:background="@drawable/edit_background"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập cụm từ muốn thay đổi"/>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Thay bằng:"/>
        <EditText
            android:textSize="12dp"
            android:id="@+id/tv_ndThaythe"
            android:background="@drawable/edit_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập cụm từ muốn thay đổi thành"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00aff0">
        <Button
            android:id="@+id/btn_themThaythe"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:maxWidth="0dp"
            android:maxHeight="0dp"
            android:text="Thêm"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_suaThaythe"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Sửa"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_xoaThaythe"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Xóa"
            android:layout_weight="1"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_Thaythe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
