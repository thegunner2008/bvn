<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#00aff0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ngay_thanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Ngày"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_phatsinh"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical|center_horizontal|center"
            android:text="Phát sinh"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_thanhtoan"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical|center_horizontal|center"
            android:text="Thanh toán"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_luyke"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical|center_horizontal|center"
            android:paddingRight="10dp"
            android:text="Số tồn"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>
