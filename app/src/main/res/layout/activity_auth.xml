<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00aff0"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/authCodeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#183257"
        android:textColor="@color/white"
        android:text="Hãy điền 5 số code Telegram gửi về"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/authCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authCodeInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:inputType="number"
        android:textSize="20sp"
        android:background="#FFFFFF" /> <!-- Màu nền trắng -->


    <Button
        android:id="@+id/checkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authCode"
        android:layout_centerHorizontal="true"
        android:text="Check" />

</RelativeLayout>
