<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imv_app"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_sms" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_KhachHang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Tên khách hàng:"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_NoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="20dp"
            android:paddingLeft="10dp"
            android:text="Nd chat cuối ..."
            android:textColor="#142739"
            android:textSize="14dp"
            android:textStyle="italic" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/add_contacts"
        android:layout_width="@dimen/dimen_32dp"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dimen_6dp"
        android:background="@drawable/ic_baseline_person_add" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dimen_4dp"
        android:gravity="center"
        android:text="Xóa"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/dimen_14sp"
        android:textStyle="bold" />
</LinearLayout>
