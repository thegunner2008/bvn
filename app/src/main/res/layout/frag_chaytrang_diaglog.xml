<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00aff0"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:text="Trang được chọn:"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/taikhoan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:text="Giới hạn tín dụng:"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/CreditLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:text="Tiền còn lại:"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/Balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_XuatDan"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/edit_background"
        android:maxHeight="350dp"
        android:minHeight="250dp"
        android:padding="5dp"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_chuyendi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vào trang"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/edt_XuatErr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Các số: 11 vượt quá max của trang;"
        android:textColor="@color/red"
        android:textSize="15dp"
        android:textStyle="bold" />
</LinearLayout>
