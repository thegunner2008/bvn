<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <com.github.library.bubbleview.BubbleTextVew
        android:id="@+id/body_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="Hey! How&apos;s it going?"
        android:textColor="#fff"
        android:textSize="14dp"
        app:angle="8dp"
        app:arrowLocation="right"
        app:arrowPosition="14dp"
        app:arrowWidth="8dp"
        app:bubbleColor="#4B4B4B" />

    <TextView
        android:id="@+id/status_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_out"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="12dp"
        android:text="18:15:12"
        android:textSize="11dp" />
</RelativeLayout>