<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <com.github.library.bubbleview.BubbleTextVew
        android:id="@+id/body_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="Hey! How&apos;s it going?"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:angle="8dp"
        app:arrowLocation="left"
        app:arrowPosition="14dp"
        app:arrowWidth="8dp"
        app:bubbleColor="#ffebebed" />

    <TextView
        android:id="@+id/status_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_in"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_marginStart="12dp"
        android:textColor="#ff70808d"
        android:textSize="11dp"
        app:layout_constraintTop_toBottomOf="@+id/body_in" />
</RelativeLayout>