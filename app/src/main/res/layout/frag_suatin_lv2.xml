<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black"
            android:id="@+id/tv_thay"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nd thay"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black"
            android:id="@+id/tv_thaybang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="19dp"
            android:text="thay bang\10thu xem\10the nao"/>
    </LinearLayout>
</LinearLayout>
